{
  "name": "root",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "npm run build -w icons -w components",
    "lint": "eslint '{packages,apps}/*/src/**/*.{js,ts,tsx}' --max-warnings=0 --no-ignore",
    "lint:fix": "npm run lint -- --fix",
    "pre-commit": "lint-staged",
    "prepare": "is-ci || husky install"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "lint-staged": {
    "{packages,apps}/*/src/**/*.{js,ts,tsx}": [
      "eslint --fix --no-color --max-warnings=0 --no-ignore"
    ]
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.7",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-solid": "^0.10.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4",
    "semantic-release": "^19.0.5",
    "typescript": "^4.9.5"
  }
}
